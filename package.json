{
  "name": "vmcandles-backend",
  "version": "1.0.0",
  "description": "V&M Candle Experience Backend API",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "db:generate": "dotenv -e .env -- prisma generate",
    "db:migrate": "dotenv -e .env -- prisma migrate dev",
    "db:migrate:prod": "dotenv -e .env -- prisma migrate deploy",
    "db:seed": "dotenv -e .env -- node prisma/seed.js",
    "db:studio": "dotenv -e .env -- prisma studio",
    "db:reset": "dotenv -e .env -- prisma migrate reset",
    "db:fix-migration": "node scripts/fix-migration.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ecommerce",
    "candles",
    "api"
  ],
  "author": "V&M Candles",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "prisma": "^6.19.0",
    "transbank-sdk": "^6.1.0",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "nodemon": "^3.1.11"
  }
}
